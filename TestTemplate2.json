{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "imageTemplateName": {
            "type": "string"
        },
        "api-version": {
            "type": "string"
        },
        "svclocation": {
            "type": "string"
        }
    },
    "variables": {},
    "resources": [
        {
            "name": "[parameters('imageTemplateName')]",
            "type": "Microsoft.VirtualMachineImages/imageTemplates",
            "apiVersion": "[parameters('api-version')]",
            "location": "<region>",
            "dependsOn": [],
            "tags": {},
            "identity": {
            "type": "UserAssigned",
                    "userAssignedIdentities": {
                    "<imgBuilderId>": {}
                }
                },
            "properties": {
                "buildTimeoutInMinutes": 300,
                "vmProfile": {
                    "vmSize": "Standard_D4s_v4",
                    "osDiskSizeGB": 127
                },
                "source": {
                    "type": "PlatformImage",
                    "publisher": "MicrosoftWindowsDesktop",
                    "offer": "office-365",
                    "sku": "win10-22h2-avd-m365-g2",
                    "version": "latest"
                },
                "customize": [
                    {
                        "type": "PowerShell",
                        "name": "CreateAIBDirectory",
                        "runElevated": true,
                        "inline": [
                            "New-Item -Type Directory -Path C:\\ -Name avdapps"
                        ]
                    },
                    {
                        "type": "PowerShell",
                        "name": "DownloadAndExtractAZCopy",
                        "runElevated": true,
                        "inline": [
                            "Set-Location C:\\avdapps; Invoke-WebRequest https://aka.ms/downloadazcopy-v10-windows -OutFile azcopy.zip; Expand-Archive azcopy.zip -DestinationPath azcopy"
                        ]
                    },
                    {
                        "type": "WindowsUpdate",
                        "searchCriteria": "IsInstalled=0",
                        "filters": [
                            "exclude:$_.Title -like '*Preview*'",
                            "include:$true"
                        ],
                        "updateLimit": 1000
                    }
                ],
                "distribute": 
            [
                {   "type":"ManagedImage",
                    "imageId": "/subscriptions/<subscriptionID>/resourceGroups/<rgName>/providers/Microsoft.Compute/images/<imageName>",
                    "location": "<region>",
                    "runOutputName": "PRD-W10-22H2-MS-V1-TST",
                    "artifactTags": {
                        "source": "azVmImageBuilder"
                    }
                }
            ]
            }
        }
    ]
}
